# ================================
# RETAILSYNC PRO - Environment Configuration
# ================================
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control!

# ================================
# DJANGO SETTINGS
# ================================
DEBUG=True
SECRET_KEY=your-secret-key-here-generate-a-random-string
ALLOWED_HOSTS=localhost,127.0.0.1

# ================================
# DATABASE
# ================================
DATABASE_URL=postgresql://retailsync_user:retailsync_password@localhost:5432/retailsync_dev

# For production, use a strong password:
# DATABASE_URL=postgresql://user:STRONG_PASSWORD@host:5432/dbname

# ================================
# REDIS (Phase 2+)
# ================================
REDIS_URL=redis://localhost:6379/0

# ================================
# CELERY (Phase 2+)
# ================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ================================
# OMNI ANALYTICS INTEGRATION (Phase 2)
# ================================
OMNI_API_KEY=your-omni-api-key-here
OMNI_API_URL=https://api.omnianalytics.com/v1
OMNI_STORE_ID=your-store-id-here

# ================================
# EMAIL SETTINGS (Phase 3+)
# ================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# ================================
# FIREBASE (Push Notifications - Phase 3)
# ================================
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_MESSAGING_SENDER_ID=your-sender-id

# ================================
# AWS S3 (File Storage - Phase 4)
# ================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=retailsync-pro-media
AWS_S3_REGION_NAME=us-east-1

# ================================
# FRONTEND SETTINGS
# ================================
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_ENVIRONMENT=development

# ================================
# SECURITY (Production Only)
# ================================
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000

# ================================
# LOGGING
# ================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ================================
# NY LABOR LAW SETTINGS
# ================================
# These are system defaults and can be overridden per store
MINIMUM_WAGE=15.00
OVERTIME_THRESHOLD_HOURS=40
MEAL_BREAK_HOURS_THRESHOLD=6
SPREAD_OF_HOURS_THRESHOLD=10
PREDICTIVE_SCHEDULING_NOTICE_DAYS=14
